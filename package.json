{
  "name": "nuz",
  "version": "0.0.2",
  "description": "Nuz is a fancy library to implements Micro Frontends compatible with ReactJS and may support more in the future",
  "author": "Hieu Lam <lamhieu.vk@gmail.com> (https://lamhieu.info)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lamhieu-vk/nuz.git"
  },
  "bugs": {
    "url": "https://github.com/lamhieu-vk/nuz/issues"
  },
  "homepage": "https://github.com/lamhieu-vk/nuz#readme",
  "directories": {
    "doc": "docs",
    "example": "examples"
  },
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "postinstall": "lerna bootstrap",
    "reinstall": "rimraf **/node_modules **/yarn.lock && yarn",
    "clean": "lerna run clean --parallel",
    "build": "lerna run build",
    "test:types": "tsc --build tsconfig.test.json",
    "test:unit": "lerna run test --stream",
    "test": "yarn test:types && yarn test:unit",
    "lint": "lerna run lint --parallel",
    "lint:fix": "lerna run lint:fix --parallel",
    "dev": "tsc --build --watch tsconfig.dev.json"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "engines": {
    "node": ">= 10.13.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.5",
    "husky": "^4.2.3",
    "jest": "^25.2.3",
    "lerna": "^3.20.2",
    "prettier": "^2.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.2.1",
    "tslint": "^6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "tslib": "^1.11.1"
  }
}
